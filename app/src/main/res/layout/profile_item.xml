<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ProfileIconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/ItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ProfileIconImageView"
            android:layout_toRightOf="@+id/ProfileIconImageView"
            android:text="Item"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/SubItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemTextView"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/ProfileIconImageView"
        android:layout_toRightOf="@+id/ProfileIconImageView"
        android:text="SubItem"
        android:textSize="10sp" />

        <TextView
            android:id="@+id/DataTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="262dp"
            android:layout_marginLeft="262dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:text="Data"
            android:textSize="11sp"
            android:textAlignment="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center_horizontal" />

        <Switch
            android:id="@+id/ProfileSwitch"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="262dp"
            android:layout_marginLeft="262dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>